<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RetailPOSApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primaryColor</item>
        <item name="colorSecondaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primaryColor</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/white</item>
        <item name="android:fontFamily">@font/brfirma_medium</item>
    </style>

    <style name="BasicEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edittext_selector</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:fontFamily">@font/brfirma_medium</item>
        <item name="hintTextColor">@color/light_grey</item>
    </style>

    <style name="BasicSpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:padding">@dimen/_6sdp</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/brfirma_regular</item>
    </style>

    <style name="CardViewStyle" parent="CardView">
        <item name="cardElevation">@dimen/_5sdp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">@dimen/_5sdp</item>
        <item name="android:fontFamily">@font/brfirma_semibold</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/_10sdp</item>
    </style>

    <style name="CustomWhiteButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">@dimen/_5sdp</item>
        <item name="android:fontFamily">@font/brfirma_semibold</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:padding">@dimen/_10sdp</item>
    </style>

</resources>